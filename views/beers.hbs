<div>
    {{#each beers}}
        {{#if this.image_url}}
    <img src="{{this.image_url}}" alt="this.name">
        {{else}}
        <img src="https://via.placeholder.com/600x400" alt="{{this.name}}" />
        {{/if}}
    <h2>{{this.name}}</h2>
    <p>{{this.description}}</p>
    <p>{{this.tagline}}</p>
    {{/each}}
</div>